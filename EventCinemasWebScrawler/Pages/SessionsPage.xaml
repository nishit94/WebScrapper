<Page x:Class="EventCinemasWebScrawler.Pages.SessionsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EventCinemasWebScrawler.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="510" d:DesignWidth="900"
      Title="SessionsPage">

    <Grid>
        <DataGrid x:Name="SessionsDataGrid" IsReadOnly="True" AutoGenerateColumns="False" CanUserAddRows="False" FontSize="12">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Type}" Header="Type" Width="*" />
                <DataGridTextColumn Binding="{Binding Time}" Header="Time" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
